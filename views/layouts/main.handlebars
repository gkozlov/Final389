    {{>nav}}
    <div align="right"><b>Search:</b> <input type="text" id="name" name="Enter a destination" class="input-lg" required minlength="2" maxlength="20" size="15">
    </div>
    <script>
		$("#name").on("keyup", function() {
			var g = $(this).val().toLowerCase();
			$(".title").each(function() {
				var s = $(this).text().toLowerCase();
				$(this).closest('#destinations')[ s.indexOf(g) !== -1 ? 'show' : 'hide' ]();
			})
		})
    </script>
